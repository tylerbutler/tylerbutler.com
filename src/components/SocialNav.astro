---
// Social navigation items with icons - GitHub, Email, Feed, Archive
import { Mail, Github, Rss, Archive } from '@lucide/astro';

const socialItems = [
  {
    href: 'https://github.com/tylerbutler',
    label: 'GitHub',
    icon: 'github',
    external: true
  },
  {
    href: 'mailto:tyler@tylerbutler.com',
    label: 'Email',
    icon: 'email',
    external: false
  },
  {
    href: '/feed.xml',
    label: 'Feed',
    icon: 'feed',
    external: false
  },
  {
    href: '/articles/',
    label: 'Archive',
    icon: 'archive',
    external: false
  },
];
---

<div class="social-nav">
  {socialItems.map(item => (
    <a
      href={item.href}
      class={`social-link social-link--${item.icon}`}
      title={item.label}
      target={item.external ? '_blank' : undefined}
      rel={item.external ? 'noopener' : undefined}
    >
      {item.icon === 'github' && (
        <Github class="social-icon" />
      )}

      {item.icon === 'email' && (
        <Mail class="social-icon" />
      )}

      {item.icon === 'feed' && (
        <Rss class="social-icon" />
      )}

      {item.icon === 'archive' && (
        <Archive class="social-icon" />
      )}

      <span class="social-label sr-only">{item.label}</span>
    </a>
  ))}
</div>

<style>
  .social-nav {
    display: flex;
    gap: 12px;
    align-items: center;
  }

  .social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    text-decoration: none;
    transition: all 0.2s ease;
    padding: 4px;
    border-radius: 4px;
  }

  .social-link:hover {
    color: var(--accent, #d4af37);
    background-color: rgba(255, 255, 255, 0.1);
  }

  .social-link:focus {
    outline: 2px solid var(--accent, #d4af37);
    outline-offset: 2px;
    border-radius: 4px;
  }

  .social-icon {
    width: 16px;
    height: 16px;
    flex-shrink: 0;
  }


  .social-label {
    margin-left: 6px;
    font-size: 12px;
    letter-spacing: 1px;
    text-transform: uppercase;
  }

  /* Screen reader only text */
  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border: 0;
  }

  /* Large screens: Show as part of sidebar navigation */
  @media (min-width: 1200px) {
    .social-nav {
      /* Will be positioned in sidebar nav */
      flex-direction: column;
      gap: 6px;
      width: 100%;
    }

    .social-link {
      justify-content: flex-start;
      width: 100%;
      padding: 6px 8px;
    }

    .social-icon {
      width: 14px;
      height: 14px;
    }
  }

  /* Medium screens: Show above nav items, inverted colors */
  @media (min-width: 768px) and (max-width: 1199px) {
    .social-nav {
      justify-content: center;
      background-color: white;
      padding: 8px 16px;
      border-radius: 20px;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }

    .social-link {
      color: #1a1a1a; /* Dark text on white background */
    }

    .social-link:hover {
      color: var(--accent, #d4af37);
      background-color: rgba(212, 175, 55, 0.1);
    }

    .social-icon {
      width: 18px;
      height: 18px;
    }
  }

  /* Small screens: Hide social nav */
  @media (max-width: 767px) {
    .social-nav {
      display: none;
    }
  }
</style>