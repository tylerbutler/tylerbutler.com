---
import { type CollectionEntry, getCollection } from "astro:content";
import { ExternalLink } from "@lucide/astro";
import type { TocItem } from "astro-toc";
import { TOC } from "astro-toc";
import BaseLayout from "../layouts/BaseLayout.astro";
import { getArticleUrl } from "../lib/article-utils";
import { formatTitle } from "../lib/typography";

export async function getStaticPaths() {
  const articles = await getCollection("articles", ({ data }) => {
    return !data.draft;
  });

  // Sort articles by date (newest first)
  const sortedArticles = articles.sort(
    (a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime(),
  );

  return sortedArticles.map((article, index) => {
    const date = new Date(article.data.date);
    const year = date.getFullYear();
    const month = String(date.getMonth() + 1).padStart(2, "0");
    const slug = article.data.slug || article.slug;

    // Get previous (older) and next (newer) articles
    const prevArticle = sortedArticles[index + 1] || null;
    const nextArticle = sortedArticles[index - 1] || null;

    return {
      params: {
        slug: `${year}/${month}/${slug}`,
      },
      props: {
        article,
        prevArticle,
        nextArticle,
      },
    };
  });
}

const { article, prevArticle, nextArticle } = Astro.props;
const { Content, headings } = await article.render();

// Check if this is a guide article and prepare TOC data
const isGuide = article.data.type === "guide";
const tocData: TocItem[] = isGuide
  ? headings
      .filter((h) => h.depth >= 2 && h.depth <= 3) // Only h2 and h3
      .map((h) => ({
        depth: h.depth,
        title: h.text,
        url: `#${h.slug}`,
      }))
  : [];

// Helper function to generate article URL
function generateArticleUrl(article: CollectionEntry<"articles">) {
  const date = new Date(article.data.date);
  const year = date.getFullYear();
  const month = String(date.getMonth() + 1).padStart(2, "0");
  const slug = article.data.slug || article.slug;
  return `/${year}/${month}/${slug}`;
}

const date = new Date(article.data.date);
const formattedDate = date.toLocaleDateString("en-US", {
  year: "numeric",
  month: "long",
  day: "numeric",
});

// Calculate if article is old enough to show age aside (>10 years)
const currentYear = new Date().getFullYear();
const articleYear = date.getFullYear();
const yearsSinceWritten = currentYear - articleYear;
const shouldShowAgeAside = yearsSinceWritten > 10;

// Determine age period when article was written
// Assume: early 2000s = early 20s, 2010s = 30s, 2020s = 40s
// Each decade divided into thirds: 0-3 = early, 4-6 = mid, 7-9 = late
function getAgePeriod(year: number): string {
  const decade = Math.floor(year / 10) * 10;
  const yearInDecade = year % 10;

  // Determine age range based on decade
  let ageDecade: number;
  if (decade >= 2000 && decade < 2010) {
    ageDecade = 20;
  } else if (decade >= 2010 && decade < 2020) {
    ageDecade = 30;
  } else if (decade >= 2020 && decade < 2030) {
    ageDecade = 40;
  } else {
    // For older articles, continue the pattern backwards
    ageDecade = 20 - ((2000 - decade) / 10) * 10;
  }

  // Determine early/mid/late
  let period: string;
  if (yearInDecade <= 3) {
    period = "early";
  } else if (yearInDecade <= 6) {
    period = "mid";
  } else {
    period = "late";
  }

  return `${period} ${ageDecade}s`;
}

const agePeriod = shouldShowAgeAside ? getAgePeriod(articleYear) : null;
const isLinkPost = article.data.articleType === "link";
---

<BaseLayout title={`${article.data.title} - Tyler Butler`} description={article.data.excerpt} headerSize="small" canonicalUrl={`https://tylerbutler.com${getArticleUrl(article)}`}>
  <div class="article-layout" class:list={{ 'with-toc': isGuide && tocData.length > 0 }}>
    <article class="article" class:list={{ 'link-post': isLinkPost }}>
      <header class="article-header">
        <h1>{await formatTitle(article.data.title)}</h1>
        <div class="article-meta">
          <time datetime={article.data.date.toISOString()} class="article-date">
            {formattedDate}
            {agePeriod && <span class="age-aside"> <em>(I wrote this in my {agePeriod})</em></span>}
          </time>
          {!isLinkPost && article.data.via && article.data.vialink && (
            <span class="article-via">
              via <a href={article.data.vialink} target="_blank" rel="noopener noreferrer" class="via-link">
                {article.data.via}
                <ExternalLink size={12} class="external-icon" />
              </a>
            </span>
          )}
        </div>
      </header>

      {isLinkPost && article.data.link && (
        <div class="link-post-reference">
          <div class="link-wrapper">
            <a href={article.data.link} target="_blank" rel="noopener noreferrer" class="external-article-link">
              {await formatTitle(article.data.title)}
              <ExternalLink size={16} class="external-icon" />
            </a>
            {article.data.via && article.data.vialink && (
              <cite class="link-via">
                via <a href={article.data.vialink} target="_blank" rel="noopener noreferrer" class="via-link">
                  {article.data.via}
                  <ExternalLink size={12} class="external-icon" />
                </a>
              </cite>
            )}
          </div>
        </div>
      )}

      {/* TOC for narrow screens - inline at top */}
      {isGuide && tocData.length > 0 && (
        <nav class="toc-narrow" aria-label="Table of Contents">
          <h2 class="toc-title">Contents</h2>
          <TOC toc={tocData} depth={2} maxDepth={3} class="toc-list" />
        </nav>
      )}

      <div class="article-content">
        <Content />
      </div>

      {article.data.tags && article.data.tags.length > 0 && (
        <div class="article-tags">
          {article.data.tags.map(tag => (
            <a href={`/tags/${tag}/`} class="tag" data-pagefind-filter="tag">#{tag}</a>
          ))}
        </div>
      )}
    </article>

    {/* TOC for medium+ screens - sidebar on right */}
    {isGuide && tocData.length > 0 && (
      <aside class="toc-sidebar" aria-label="Table of Contents">
        <h2 class="toc-title">Contents</h2>
        <TOC toc={tocData} depth={2} maxDepth={3} class="toc-list" />
      </aside>
    )}
  </div>

  <nav class="article-nav">
    {prevArticle && (
      <a href={generateArticleUrl(prevArticle)} class="nav-link">
        <span class="nav-arrow">←</span>
        <span class="nav-text">{await formatTitle(prevArticle.data.title)}</span>
      </a>
    )}

    {nextArticle && (
      <a href={generateArticleUrl(nextArticle)} class="nav-link nav-link-next">
        <span class="nav-text">{await formatTitle(nextArticle.data.title)}</span>
        <span class="nav-arrow">→</span>
      </a>
    )}
  </nav>
</BaseLayout>

<script>
  // Handle TOC positioning: start at header bottom, stick to top when scrolling
  const tocSidebar = document.querySelector('.toc-sidebar');
  if (tocSidebar) {
    const header = document.querySelector('header');
    if (header) {
      const updateTocPosition = () => {
        const headerBottom = header.getBoundingClientRect().bottom;
        // If header is still visible, position TOC at header bottom
        // Otherwise, stick to top of viewport with small padding
        const topPosition = Math.max(20, headerBottom);
        (tocSidebar as HTMLElement).style.top = `${topPosition}px`;
      };

      // Update on scroll and resize
      window.addEventListener('scroll', updateTocPosition, { passive: true });
      window.addEventListener('resize', updateTocPosition, { passive: true });

      // Initial position
      updateTocPosition();
    }
  }
</script>

<style>
  /* Article layout container */
  .article-layout {
    display: block;
  }

  .article {
    max-width: 100%;
  }

  /* TOC for narrow screens - inline at top */
  .toc-narrow {
    margin-bottom: 2em;
    padding: 1.5em;
    background: var(--code-bg);
    border-radius: 5px;
    border-left: 3px solid var(--accent);
  }

  /* TOC sidebar hidden on narrow screens */
  .toc-sidebar {
    display: none;
  }

  .toc-title {
    font-family: adelle, Georgia, serif;
    font-size: 18px;
    font-weight: 500;
    margin: 0 0 1em 0;
    color: var(--text);
  }

  /* Override astro-toc default styles */
  .toc-narrow :global(.toc-list),
  .toc-sidebar :global(.toc-list) {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
  }

  .toc-narrow :global(.toc-list li),
  .toc-sidebar :global(.toc-list li) {
    margin: 0.5em 0;
    display: block;
  }

  .toc-narrow :global(.toc-list li ul),
  .toc-sidebar :global(.toc-list li ul) {
    margin-left: 1em;
    margin-top: 0.5em;
  }

  .toc-narrow :global(.toc-list a),
  .toc-sidebar :global(.toc-list a) {
    color: var(--accent);
    text-decoration: none;
    transition: color 0.2s ease;
    line-height: 1.4;
    display: inline-block;
  }

  .toc-narrow :global(.toc-list a:hover),
  .toc-sidebar :global(.toc-list a:hover) {
    color: var(--text);
  }

  /* Wide screens: fixed sidebar TOC */
  @media (min-width: 1200px) {
    /* Hide narrow TOC on wide screens */
    .toc-narrow {
      display: none;
    }

    /* Show sidebar TOC on wide screens */
    .toc-sidebar {
      display: block;
      padding: 1.5em;
      /* Light mode: dark background, light text (inverted) */
      background: var(--dark-bg);
      color: var(--nav-links);
      border-radius: 0 5px 5px 0; /* Round right corners */
      border-left: 3px solid var(--accent);
      position: fixed;
      top: 0; /* At viewport top - JavaScript will adjust dynamically */
      /* Position so LEFT edge aligns with header's RIGHT edge */
      left: calc(50vw + var(--container-width) / 2);
      max-height: 100vh;
      overflow-y: auto;
      width: 250px;
      z-index: 1; /* Low priority so code blocks overlay when scrolling */
    }

    /* Dark mode: light background, dark text (inverted from page) */
    :global(.dark) .toc-sidebar {
      background: #faf8f6; /* Light warm white */
      color: #2a4a47; /* Deep teal-gray text */
    }

    .toc-sidebar :global(.toc-list a) {
      color: var(--accent);
    }

    .toc-sidebar :global(.toc-list a:hover) {
      color: var(--nav-links);
    }

    :global(.dark) .toc-sidebar :global(.toc-list a:hover) {
      color: #2a4a47;
    }

    .toc-sidebar .toc-title {
      font-size: 16px;
      margin-bottom: 0.75em;
      color: var(--nav-links);
    }

    :global(.dark) .toc-sidebar .toc-title {
      color: #2a4a47;
    }

    .toc-sidebar :global(.toc-list li) {
      margin: 0.4em 0;
      font-size: 14px;
    }

    .toc-sidebar :global(.toc-list li ul) {
      margin-left: 1em;
      margin-top: 0.4em;
    }

    .toc-sidebar :global(.toc-list li li) {
      font-size: 13px;
    }
  }

  .article-header {
    margin-bottom: 2em;
    border-bottom: 1px solid var(--text-light);
  }

  .article h1 {
    font-family: adelle, Georgia, serif;
    font-size: clamp(32px, 6vw, 48px);
    font-weight: 300;
    line-height: 1.2;
    color: var(--text);
    margin: 0 0 0.5em 0;
  }

  .link-post-reference {
    margin-bottom: 2em;
    padding: 1em;
    background: var(--code-bg);
    border-left: 3px solid var(--accent);
    border-radius: 3px;
  }

  .link-wrapper {
    display: inline-flex;
    flex-direction: column;
    align-items: flex-start;
  }

  .external-article-link {
    color: var(--accent);
    text-decoration: none;
    font-size: 18px;
    font-weight: 500;
    display: inline-flex;
    align-items: center;
    gap: 0.5em;
    transition: color 0.2s ease;
    align-self: flex-start;
  }

  .external-article-link:hover {
    color: var(--text);
  }

  .link-via {
    margin-top: 0.75em;
    font-style: normal;
    font-size: 13px;
    color: var(--text-light);
    align-self: flex-end;
  }

  .link-via::before {
    content: '— ';
  }

  .article-meta {
    margin-bottom: 1em;
  }

  .article-date {
    font-size: 16px;
    color: var(--text-light);
    text-transform: uppercase;
    letter-spacing: 1px;
    display: block;
  }

  .age-aside {
    text-transform: none;
    letter-spacing: normal;
    font-size: 14px;
    color: var(--text-light);
  }

