---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';

// Get all articles (non-draft)
const articles = await getCollection('articles', ({ data }) => {
  return !data.draft;
});

// Sort by date (newest first)
const sortedArticles = articles
  .sort((a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime());

// Group articles by year
const articlesByYear = sortedArticles.reduce((acc, article) => {
  const year = new Date(article.data.date).getFullYear();
  if (!acc[year]) {
    acc[year] = [];
  }
  acc[year].push(article);
  return acc;
}, {} as Record<number, typeof articles>);

const years = Object.keys(articlesByYear).map(Number).sort((a, b) => b - a);
---

<BaseLayout title="Articles - Tyler Butler" description="All articles by Tyler Butler on technology, programming, and more.">
  <section>
    <h2>Articles</h2>
    <p>
      A collection of articles covering web development, software engineering,
      and technology trends over the years.
    </p>

    {years.map(year => (
      <section class="year-section">
        <h3>{year}</h3>
        <ul class="articles-list">
          {articlesByYear[year].map(article => {
            const date = new Date(article.data.date);
            const year = date.getFullYear();
            const month = String(date.getMonth() + 1).padStart(2, '0');
            const slug = article.data.slug || article.slug;

            // Use external link if available, otherwise use local article link
            const linkUrl = article.data.link || `/articles/${year}/${month}/${slug}`;
            const isExternalLink = !!article.data.link;

            return (
              <li class="article-item">
                <article>
                  <h4>
                    <a href={linkUrl} {...(isExternalLink ? { target: "_blank", rel: "noopener noreferrer" } : {})}>
                      {article.data.title}
                      {isExternalLink && <span class="external-link-icon">â†—</span>}
                    </a>
                  </h4>
                  <time datetime={article.data.date.toISOString()}>
                    {date.toLocaleDateString('en-US', {
                      year: 'numeric',
                      month: 'long',
                      day: 'numeric'
                    })}
                  </time>
                  {article.data.tags && article.data.tags.length > 0 && (
                    <div class="article-tags">
                      {article.data.tags.map(tag => (
                        <a href={`/tags/${tag}/`} class="tag">#{tag}</a>
                      ))}
                    </div>
                  )}
                  {article.data.excerpt && (
                    <p class="excerpt">{article.data.excerpt}</p>
                  )}
                  {(article.data.via || article.data.vialink) && (
                    <p class="via">
                      via {article.data.vialink ? (
                        <a href={article.data.vialink} target="_blank" rel="noopener noreferrer">
                          {article.data.via || 'link'}
                        </a>
                      ) : article.data.via}
                    </p>
                  )}
                </article>
              </li>
            );
          })}
        </ul>
      </section>
    ))}
  </section>
</BaseLayout>

<style>
  .year-section {
    margin-bottom: 3em;
  }

  .year-section h3 {
    font-size: 22px;
    color: var(--accent);
    margin-bottom: 1em;
    border-bottom: 2px solid var(--accent);
    padding-bottom: 0.5em;
  }

  .articles-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .article-item {
    margin-bottom: 1.5em;
    padding-bottom: 1em;
    border-bottom: 1px solid #f0f0f0;
  }

  .article-item:last-child {
    border-bottom: none;
  }

  .article-item h4 {
    margin: 0 0 0.5em 0;
    font-size: 16px;
    font-weight: 400;
  }

  .article-item h4 a {
    color: var(--text);
    text-decoration: none;
  }

  .article-item h4 a:hover {
    color: var(--accent);
  }

  .external-link-icon {
    font-size: 0.8em;
    margin-left: 0.3em;
    opacity: 0.6;
  }

  .article-item time {
    font-size: 11px;
    color: #666;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .article-tags {
    margin: 0.5em 0;
  }

  .tag {
    display: inline-block;
    background: #e8e8e8;
    padding: 2px 6px;
    margin-right: 6px;
    margin-bottom: 4px;
    font-size: 10px;
    color: #555;
    border-radius: 3px;
    text-transform: lowercase;
    text-decoration: none;
    transition: all 0.2s ease;
  }

  .tag:hover {
    background: var(--accent);
    color: white;
  }

  .excerpt {
    margin: 0.5em 0;
    font-size: 13px;
    line-height: 1.6;
    color: #555;
  }

  .via {
    margin: 0.5em 0 0 0;
    font-size: 11px;
    color: #888;
    font-style: italic;
  }

  .via a {
    color: var(--accent);
    text-decoration: none;
  }

  .via a:hover {
    text-decoration: underline;
  }
</style>