{
  "defaults": {
    "concurrency": 4,
    "standard": "WCAG2AA",
    "runners": ["axe", "htmlcs"],
    "chromeLaunchConfig": {
      "args": ["--no-sandbox", "--disable-setuid-sandbox"]
    },
    "timeout": 30000,
    "wait": 1000,
    "actions": [
      "wait for element body to be visible"
    ]
  },
  "urls": [
    "http://localhost:4173/",
    "http://localhost:4173/articles/",
    "http://localhost:4173/about/",
    "http://localhost:4173/projects/"
  ],
  "sitemap": false,
  "sitemapFind": "https://tylerbutler.com",
  "sitemapReplace": "http://localhost:1314",
  "ignore": [
    "color-contrast",
    "WCAG2AA.Principle1.Guideline1_4.1_4_3.G18.Fail"
  ],
  "includeNotices": false,
  "includeWarnings": true,
  "reporter": "json",
  "threshold": 0,
  "hideElements": ".skip-link, .visually-hidden"
}