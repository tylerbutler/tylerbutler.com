---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';

// Get all articles (non-draft)
const articles = await getCollection('articles', ({ data }) => {
  return !data.draft;
});

// Sort by date (newest first)
const sortedArticles = articles
  .sort((a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime());

// Group articles by year
const articlesByYear = sortedArticles.reduce((acc, article) => {
  const year = new Date(article.data.date).getFullYear();
  if (!acc[year]) {
    acc[year] = [];
  }
  acc[year].push(article);
  return acc;
}, {} as Record<number, typeof articles>);

const years = Object.keys(articlesByYear).map(Number).sort((a, b) => b - a);
---

<BaseLayout title="Articles - Tyler Butler" description="All articles by Tyler Butler on technology, programming, and more.">
  <section>
    <h1>Articles</h1>

    <nav class="year-navigation">
      <ul class="year-nav-list">
        {years.map((year, index) => (
          <li class="year-nav-item">
            <a href={`#${year}`} class="year-nav-link">{year}</a>
            {index < years.length - 1 && <span class="year-separator">/</span>}
          </li>
        ))}
      </ul>
    </nav>

    <main class="articles-main">
      {years.map(year => (
        <section class="year-section" id={year.toString()}>
          <h2 class="year-heading">{year}</h2>
          <div class="articles-container">
            {articlesByYear[year].map(article => {
              const date = new Date(article.data.date);
              const year = date.getFullYear();
              const month = String(date.getMonth() + 1).padStart(2, '0');
              const slug = article.data.slug || article.slug;

              // Use external link if available, otherwise use local article link
              const linkUrl = article.data.link || `/articles/${year}/${month}/${slug}`;
              const isExternalLink = !!article.data.link;

              return (
                <article class="article-item">
                  <time class="article-date" datetime={article.data.date.toISOString()}>
                    {date.toLocaleDateString('en-US', {
                      day: '2-digit',
                      month: 'short'
                    })}
                  </time>
                  <h1 class="article-title">
                    <a href={linkUrl} class="article-link" {...(isExternalLink ? { target: "_blank", rel: "noopener noreferrer" } : {})}>
                      {article.data.title}
                      {isExternalLink && <span class="external-link-icon">â†—</span>}
                    </a>
                  </h1>
                  {article.data.tags && article.data.tags.length > 0 && (
                    <div class="article-tags">
                      {article.data.tags.map(tag => (
                        <a href={`/tags/${tag}/`} class="tag">#{tag}</a>
                      ))}
                    </div>
                  )}
                  {article.data.excerpt && (
                    <p class="excerpt">{article.data.excerpt}</p>
                  )}
                  {(article.data.via || article.data.vialink) && (
                    <p class="via">
                      via {article.data.vialink ? (
                        <a href={article.data.vialink} target="_blank" rel="noopener noreferrer">
                          {article.data.via || 'link'}
                        </a>
                      ) : article.data.via}
                    </p>
                  )}
                </article>
              );
            })}
          </div>
        </section>
      ))}
    </main>
  </section>
</BaseLayout>

