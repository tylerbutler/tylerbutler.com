---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import { ExternalLink, Github } from '@lucide/svelte';
import { normalizeMarkdownHeadings } from '../../lib/markdown-utils.ts';

export async function getStaticPaths() {
  const projects = await getCollection('projects', ({ id }) => !id.startsWith('_'));

  return projects.map((project) => ({
    params: { slug: project.slug },
    props: { project },
  }));
}

const { project } = Astro.props;
const { Content } = await project.render();

// Normalize headings to start at h2 (since project title is h1)
const normalizedHtml = normalizeMarkdownHeadings(project.body, 2);
---

<BaseLayout title={`${project.data.title} - Tyler Butler`} description={project.data.description} headerSize="small">
  <article class="project">
    <header class="project-header">
      <h1>{project.data.title}</h1>
      {project.data.description && (
        <p class="project-description">{project.data.description}</p>
      )}
    </header>

    <div class="project-content" set:html={normalizedHtml}>
    </div>

    <div class="project-links">
      {project.data.url && (
        <a href={project.data.url} target="_blank" rel="noopener" class="project-link">
          <ExternalLink size={16} />
          View Project
        </a>
      )}
      {project.data.github && (
        <a href={project.data.github} target="_blank" rel="noopener" class="project-link">
          <Github size={16} />
          GitHub
        </a>
      )}
    </div>
  </article>
</BaseLayout>

<style>
  .project {
    max-width: 100%;
  }

  .project-header {
    margin-bottom: 2em;
    border-bottom: 1px solid #c0c0c0;
    padding-bottom: 1.5em;
  }

  .project h1 {
    font-family: adelle, Georgia, serif;
    font-size: clamp(32px, 5vw, 42px);
    font-weight: 300;
    line-height: 1.2;
    color: var(--text);
    margin: 0 0 0.5em 0;
  }

  .project-description {
    font-style: italic;
    color: #666;
    font-size: 18px;
    margin: 1em 0 1.5em 0;
    line-height: 1.5;
  }

  .project-links {
    margin: 2em 0 0 0;
    padding-top: 1.5em;
    border-top: 1px solid #c0c0c0;
  }

  .project-link {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    margin-right: 1em;
    color: var(--accent);
    text-decoration: none;
    font-size: 13px;
    text-transform: uppercase;
    letter-spacing: 1px;
    padding: 8px 12px;
    border: 1px solid var(--accent);
    border-radius: 3px;
    transition: all 0.2s ease;
  }

  .project-link:hover {
    background-color: var(--accent);
    color: white;
  }

  .project-content {
    font-size: 16px;
    line-height: 1.6;
  }

  .project-content h2 {
    margin: 2em 0 1em 0;
    font-size: clamp(28px, 4.5vw, 36px);
    font-family: adelle, Georgia, serif;
    font-weight: 300;
    line-height: 1.2;
  }

  .project-content h3 {
    margin: 1.5em 0 0.8em 0;
    font-size: clamp(24px, 4vw, 28px);
    font-family: adelle, Georgia, serif;
    font-weight: 300;
    line-height: 1.2;
  }

  .project-content h4 {
    margin: 1.2em 0 0.6em 0;
    font-size: clamp(20px, 3.5vw, 24px);
    font-family: adelle, Georgia, serif;
    font-weight: 400;
    line-height: 1.3;
  }

  .project-content h5 {
    margin: 1em 0 0.5em 0;
    font-size: clamp(18px, 3vw, 20px);
    font-family: adelle, Georgia, serif;
    font-weight: 400;
    line-height: 1.3;
  }

  .project-content h6 {
    margin: 1em 0 0.5em 0;
    font-size: clamp(16px, 2.5vw, 18px);
    font-family: adelle, Georgia, serif;
    font-weight: 400;
    line-height: 1.3;
  }

  .project-content p {
    font-size: clamp(15px, 2.5vw, 16px);
    line-height: 1.6;
    margin: 1em 0;
  }
</style>